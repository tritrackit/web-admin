{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "start web",
      "type": "pwa-chrome",
      "request": "launch",
      "preLaunchTask": "npm: start_web",
      "url": "http://localhost:4200/#",

      // Note: The ./client directory
      "webRoot": "${workspaceFolder}",

      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:/*": "${webRoot}/*",
        "/./*": "${webRoot}/*",
        "/src/*": "${webRoot}/*",
        "/*": "*",
        "/./~/*": "${webRoot}/node_modules/*"
      }
    }
  ]
}
